        <item name="android:textSize">@dimen/sub_info_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SongPlugPicture">

        <item name="android:layout_marginTop">@dimen/margin_110</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/margin_120</item>
        <item name="android:layout_height">@dimen/margin_120</item>

    </style>
    <style name="TextSongPlug">
        <item name="android:layout_marginStart">@dimen/margin_24</item>
        <item name="android:layout_marginTop">@dimen/margin_246</item>
        <item name="android:layout_marginEnd">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/button_interval21</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
