<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">@dimen/button_star_fest_screen</item>
        <item name="android:layout_marginEnd">@dimen/button_end_fest_screen</item>
        <item name="android:layout_weight">5</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_button_font</item>
        <item name="android:textSize">@dimen/button_text_size_fest_screen</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="TextViewSettingScreen">
        <item name="android:layout_marginStart">@dimen/string_star_2_screen</item>
        <item name="android:layout_marginTop">@dimen/button_interval21</item>
        <item name="android:layout_marginEnd">@dimen/string_end_2_screen</item>
        <item name="android:layout_marginBottom">@dimen/button_interval21</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/string_text_size_2_screen</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextViewSubInfo">
        <item name="android:textAllCaps">false</item>
